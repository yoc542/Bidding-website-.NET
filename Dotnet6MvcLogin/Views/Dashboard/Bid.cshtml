@model Dotnet6MvcLogin.Models.DTO.ApplicationForm

@{
    ViewData["Title"] = "Bid";
}


<h4>Bid Application Form</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Bid">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


         
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <input asp-for="productId" class="form-control" style="display: none;" />
            <div class="form-group">
                <label asp-for="productPrice" class="control-label"></label>
                <input asp-for="productPrice" class="form-control" />
                <span asp-validation-for="productPrice" class="text-danger"></span>
            </div>
         
            <div class="form-group">
                <input type="submit" value="Submit Bid" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

